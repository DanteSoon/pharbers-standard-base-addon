{{!-- {{yield}} --}}
<div local-class="ph-input-warp">
    {{#if title}}
    <label local-class="ph-input-label">{{title}}</label>
    {{/if}}
    {{#if (eq type "search")}}
        {{#if icon}}
        <div local-class="ph-input-searchbar">
            {{input local-class="ph-input ph-input-search" type="text" placeholder=pc value=inputValue}}
            
            <button local-class="ph-input-search-button" {{action "click"}}>{{searchTitle}}</button>
            {{#if isChangeIcon}}
            <i class={{icon}}></i>
            {{/if}}
        </div>
        {{else}}
        {{input local-class="ph-input ph-input-search" type="text" placeholder=pc value=inputValue}}
        <button local-class="ph-input-search-button" {{action "click"}}>{{searchTitle}}</button>
        {{/if}}
    {{else if (eq type "area")}}
    <textarea local-class="ph-input ph-input-area" placeholder={{pc}}>{{inputValue}}</textarea>
    {{else}}
        {{#if icon}}
        <div local-class="ph-input-icontext">
            {{input local-class="ph-input ph-input-default" type="text" placeholder=pc value=inputValue}}
            {{#if isChangeIcon}}
            <i class={{icon}}></i>
            {{/if}}
        </div>
        {{else}}
        {{input local-class="ph-input ph-input-default" type="text" placeholder=pc value=inputValue}}
        {{/if}}
    {{/if}}
</div>